<div 
  id="editor_ck_container"
  class="relative"
  phx-update="ignore" 
  x-data="{
    open: false,
    close(focusAfter) {
      if (! this.open) return
      this.open = false
      focusAfter && focusAfter.focus()
    }
  }"
  x-on:keydown.escape.prevent.stop="close($refs.button)">
  <div 
    id="editor_ck"
    class="relative"
    phx-hook="CkEditor"
    data-insert_text={e(assigns, :insert_text, "")}
    >
    <div>
      <div 
        id="editor"
        data-placeholder={@placeholder}
        class={@textarea_class} 
        style="padding-right: 30px"
        >{@content} </div>
        <input 
        name={@field_name} 
        type="hidden"
        class="editor_hidden_input"
        />
    </div>
  </div>

  <!-- <div @click="open = ! open" class="absolute z-10 top-2 right-2 btn btn-ghost btn-xs btn-circle">
